rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Perfil do usuário: /users/{uid}
    // Permite que usuários autenticados leiam e escrevam em seu próprio documento.
    match /users/{uid} {
      allow read, update: if request.auth != null && request.auth.uid == uid;
      // Permite a criação apenas se o UID do documento corresponder ao UID do usuário autenticado.
      allow create: if request.auth != null && request.auth.uid == uid;
    }

    // Feedback: /feedback/{docId}
    // Permite que qualquer usuário autenticado leia os feedbacks e crie novos.
    match /feedback/{docId} {
      allow read, create: if request.auth != null;
    }
    
    // Compras Pendentes: /pending_purchases/{email}
    // Apenas o backend (via webhook) deve escrever aqui. Nega acesso de cliente.
    match /pending_purchases/{email} {
        allow read, write: if false;
    }

  }
}
